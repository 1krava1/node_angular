.container-fluid.bg-dark
    .container.py-4
        .row
            .col-12.col-md-4.col-lg-3
                .card.mb-3
                    header.card-header
                        h5.card-title.mb-0 Your summary
                    .card-body.p-0
                        .row.p-3
                            .col-4
                                img.card-img('src'="http://via.placeholder.com/184x184")
                            .col-8
                                span user.name
                                br
                                a('href'="http://steamcommunity.com/profiles/user.steamid/edit/settings") Privacy settings
                                br
                                a('href'="http://steamcommunity.com/profiles/user.steamid/tradeoffers") Trade offers
                        ul.list-group
                            li.list-group-item.border-left-0.border-right-0 user.bonus
                            li.list-group-item.border-left-0.border-right-0 user.deals
                            li.list-group-item.border-left-0.border-right-0 user.cashout
                            li.list-group-item.border-left-0.border-right-0.border-bottom-0 user.balance
                .card
                    header.card-header
                        h5.card-title.mb-0 Name bonus
                    .card-body
                        .row
                            .col-12
                                p Add "wat" to your steam name and get 1% bonus
                            .col-12
                                button.w-100.btn.btn-link
                                    i.fas.fa-sync-alt.mr-2
                                    | Refresh name
                                a.w-100.btn.btn-outline-success(
                                    'target'="_blank"
                                    'href'="https://steamcommunity.com/profiles/user.steamid/edit"
                                )
                                    i.fas.fa-external-link-alt.mr-2
                                    | Add now
            .col-12.col-md-8.col-lg-9
                .card.mb-3
                    header.card-header
                        h5.card-title.mb-0 Your steam trade link
                    .card-body
                        .row
                            .col-12
                                .input-group.input-group-lg
                                    input.form-control(
                                        'type'="text"
                                        'placeholder'="Your trade link"
                                        'aria-label'="Your trade link"
                                        'aria-describedby'="basic-addon2"
                                    )
                                    .input-group-append
                                        button.btn.btn-outline-info(
                                            type="button"
                                        ) Change
                .card.mb-3
                    header.card-header
                        h5.card-title.mb-0 Your current bonus rank
                    .card-body
                        .row
                            .col-12.col-md-6.col-lg-2
                                img.card-img('src'="http://via.placeholder.com/128x128")
                                | rank.current.name (+1%)
                            .col-12.col-md-6.col-lg-8
                                .d-flex.flex-column.justify-content-center.h-100
                                    p.text-center.mb-1 $1 / $25 (Rank 2)
                                    .progress.w-100('style'="height: 24px;")
                                        .progress-bar.bg-warning(
                                            role="progressbar"
                                            style="width: 4.8%"
                                            aria-valuenow="1"
                                            aria-valuemin="0"
                                            aria-valuemax="25"
                                        )
                            .col-12.col-md-6.col-lg-2
                                img.card-img('src'="http://via.placeholder.com/128x128")
                                | rank.next.name (+2%)
                .card.mb-3
                    header.card-header
                        h5.card-title.mb-0 Your affiliate status
                    .card-body
                        .row
                            .col-12.col-md-6.col-lg-2
                                img.card-img('src'="http://via.placeholder.com/128x128")
                                | Level 1

                            .col-12.col-md-6.col-lg-3
                                .d-flex.flex-column.justify-content-center.h-100
                                    ul.list-group.mb-2
                                        li.list-group-item.d-flex.justify-content-between.align-items-center Your earnings:
                                            span.badge.badge-primary.badge-pill $3
                                        li.list-group-item
                                            a.btn.btn-link.p-0('[routerLink]'="['/account']") Affiliate details
                            .col-12.col-md-6.col-lg-5
                                .d-flex.flex-column.justify-content-center.h-100
                                    p.text-center.mb-1 2 referrers / 5 (Level 2)
                                    .progress.w-100('style'="height: 24px;")
                                        .progress-bar.bg-success(
                                            role="progressbar"
                                            style="width: 40%"
                                            aria-valuenow="2"
                                            aria-valuemin="0"
                                            aria-valuemax="5"
                                        )
                            .col-12.col-md-6.col-lg-2
                                img.card-img('src'="http://via.placeholder.com/128x128")
                                | Level 2
            .col-12
                .card.mb-3
                    header.card-header
                        h5.card-title.mb-0 Your payment history
                    .card-body.p-0
                        .table-responsive
                            table.table.table-striped.mb-0
                                thead
                                    tr
                                        th.border-top-0('scope'="col") Transaction ID
                                        th.border-top-0('scope'="col") Date
                                        th.border-top-0('scope'="col") Payment system
                                        th.border-top-0('scope'="col") Amount
                                        th.border-top-0('scope'="col") Status
                                tbody
                                    tr
                                        th('scope'="row") transaction.id
                                        td 2018-03-29 14:27:36
                                        td PayPal email@google.com
                                        td $200
                                        td.text-danger
                                            i.fas.fa-times.mr-2
                                            | error
                                    tr
                                        th('scope'="row") transaction.id
                                        td 2018-02-15 16:00:36
                                        td WebMoney WMU123123123123
                                        td $1
                                        td.text-success
                                            i.fas.fa-check.mr-2
                                            | complete
                                    tr
                                        th('scope'="row") transaction.id
                                        td 2017-12-29 10:13:36
                                        td Card 1234 1234 1341 2341
                                        td $50
                                        td.text-secondary
                                            i.fas.fa-times.mr-2
                                            | canceled
